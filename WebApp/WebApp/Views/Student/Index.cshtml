@model WebApp.ViewModels.Student.SearchStudent

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var count = 1;
}

<div class="row">
    <div class="col-6">
        <h1>Students Details</h1>
    </div>
    <div class="col-6 text-end">
        <a type="button" class="btn btn-success" asp-action="Create">Add New Student</a>
    </div>
</div>

<table class="table table-bordered">
    <thead>
        <tr>
            <th class="text-center">#</th>
            <th class="text-center">Name</th>
            <th class="text-center">Address</th>
            <th class="text-center">Marks</th>
            <th class="text-center">Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Students)
        {
            <tr>
                <td>
                    @count
                </td>
                <td class="text-center">
                    @item.FirstName @item.LastName
                </td>
                <td>
                    @item.Address
                </td>
                <td>
                    @item.Score
                </td>
                <td class="text-center">
                    <a asp-action="Details" asp-route-id="@item.Id"><i class="bi bi-eye"></i></a> |
                    <a asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil"></i></a> |
                    <a asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash"></i></a>
                </td>
            </tr>
            count++;
        }
    </tbody>
</table>

<form asp-action="Index" method="post">
    <div class="row">
        <div class="col-md-2">
            <input type="text" asp-for="Criteria" />
        </div>
        <div class="col-md-10">
            <button type="submit" class="btn btn-primary">Search</button>
        </div>
    </div>
</form>
